<Window x:Class="ryProje02.form.giris"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ryProje02.form"
        mc:Ignorable="d"
        Title="giris" Height="300" Width="300" WindowStyle="None" Background="#04c582"
         WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="15">
            <Label Content="Sisteme Giriş" Style="{DynamicResource yaziStili2}"/>
            <Separator/>
            <Label Content="Kullanıcı Adı" Style="{DynamicResource yaziStili}"/>
            <TextBox x:Name="tbKullanAd" Background="#545D6A" Foreground="White" FontSize="18"/>
            <Label Content="Şifre" Style="{DynamicResource yaziStili}"/>
            <PasswordBox x:Name="tbSifre" Background="#545D6A" Foreground="White" FontSize="18"/>
            <Button Name="btnGiris" Click="btnGiris_Click" Content="Oturum Aç" Width="125" Height="35" 
                    Margin="50,20" Background="#545D6A" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
